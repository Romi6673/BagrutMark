<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C58282"
    android:backgroundTint="#A2B0D3"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/userName"
        android:layout_width="288dp"
        android:layout_height="68dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="הכנס שם "
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lashon"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="132dp"
        android:text="לשון והבעה"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lashonUnits"
        android:layout_width="96dp"
        android:layout_height="59dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/lashon"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <EditText
        android:id="@+id/lashonGrade"
        android:layout_width="121dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <TextView
        android:id="@+id/safrut"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:text="ספרות"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lashon" />

    <EditText
        android:id="@+id/safrut3Units"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/safrut"
        app:layout_constraintTop_toBottomOf="@+id/lashonUnits" />

    <EditText
        android:id="@+id/safrutGrade"
        android:layout_width="117dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/safrut3Units"
        app:layout_constraintTop_toBottomOf="@+id/lashonGrade" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:text="היסטוריה"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safrut" />

    <EditText
        android:id="@+id/historyUnits"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/safrut3Units" />

    <EditText
        android:id="@+id/historyGrade"
        android:layout_width="124dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/historyUnits"
        app:layout_constraintTop_toBottomOf="@+id/safrutGrade" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        android:text="אזרחות"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/ezrahutUnits"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/historyUnits" />

    <EditText
        android:id="@+id/ezrahutGrade"
        android:layout_width="121dp"
        android:layout_height="62dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/ezrahutUnits"
        app:layout_constraintTop_toBottomOf="@+id/historyGrade" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="119dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="תנ&quot;ך"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/tanachUnits"
        android:layout_width="107dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/ezrahutUnits" />

    <EditText
        android:id="@+id/tanachGrade"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/tanachUnits"
        app:layout_constraintTop_toBottomOf="@+id/ezrahutGrade" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F6BA1"
        android:onClick="go"
        android:text="next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanachGrade" />
</androidx.constraintlayout.widget.ConstraintLayout>